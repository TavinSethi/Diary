<%- include("partials/header") %>

<div class="container-fluid">

  <div class="form-class">
    <h1 class="pen">Pen Down <img class="quill" src="/css/quill.jpg"></h1>
  </div>

  <form class="form-class" action="/compose" method="post">
    <div class="form-group form-row">
      <div class="form-group col-lg-8">
        <label>Title</label>
        <input type="text" class="form-control" id="formGroupExampleInput" name="postTitle" value="">
      </div>
      <div class="form-group col-lg-4">
        <label class="">Author</label>
        <input type="text" class="form-control" id="formGroupExampleInput" name="postAuthor" value="">
      </div>

    </div>

    <div class="form-group">
      <label>Body</label>
      <textarea class="form-control" id="formGroupExampleInput2" name="postBody" rows="6" cols="80"></textarea>
    </div>

    <div class="form-group form-row">
      <div class="form-group col-lg-3">
        <input type="date" class="form-control" name="postDate" placeholder="Date">
      </div>
      <div class="form-group ml-auto">
        <button class="btn btn-dark" type="submit">Submit</button>
      </div>
    </div>


  </form>

</div>
<%- include("partials/footer") %>
