</div>

<%posts.forEach(function(post){%>

<div class="container-fluid homePost">

  <div class="divi">
    <h1 class="ptit"><%= post.title%></h1>
    <h4 class="pdat"><%= post.date %></h4>
  </div>

  <div class="divi">
    <p class="pbod">
      <%= post.body.substring(0,500) + " ..."%>
      <a href="/posts/<%= post._id %>">Read More</a>
    </p>
    <h3 class="pauth"><%="- " + post.author %></h3>

  </div>


</div>


<%});%>

